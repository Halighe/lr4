{% extends 'base.html.twig' %}

{% block title %}Вход
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6 col-lg-5">
				<div class="card shadow-sm mt-5">
					<div class="card-header bg-white text-center py-3">
						<h1 class="h3 mb-0 font-weight-normal">Вход в систему</h1>
						<p class="text-muted mb-0 small">Пожалуйста, войдите или зарегистрируйтесь</p>
					</div>

					<div class="card-body p-4">
						{% if error %}
							<div class="alert alert-danger alert-dismissible fade show" role="alert">
								{{ error.messageKey|trans(error.messageData, 'security') }}
								<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
							</div>
						{% endif %}

						{% if app.user %}
							<div class="alert alert-info mb-4">
								<div class="d-flex justify-content-between align-items-center">
									<div>
										<i class="fas fa-user-circle me-2"></i>
										Вы вошли как
										<strong>{{ app.user.userIdentifier }}</strong>
									</div>
									<a href="{{ logout_path() }}" class="btn btn-sm btn-outline-danger">
										<i class="fas fa-sign-out-alt me-1"></i>Выход
									</a>
								</div>
							</div>
						{% endif %}

						<form method="post" class="needs-validation" novalidate>
							<div class="mb-3">
								<label for="username" class="form-label">
									<i class="fas fa-envelope me-1"></i>Email
								</label>
								<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control form-control-lg" placeholder="Введите ваш email" autocomplete="email" required autofocus>
								<div class="invalid-feedback">
									Пожалуйста, введите корректный email
								</div>
							</div>

							<div class="mb-3">
								<label for="password" class="form-label">
									<i class="fas fa-lock me-1"></i>Пароль
								</label>
								<input type="password" name="_password" id="password" class="form-control form-control-lg" placeholder="Введите ваш пароль" autocomplete="current-password" required>
								<div class="invalid-feedback">
									Пожалуйста, введите пароль
								</div>
							</div>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<div class="mb-3 form-check">
								<input type="checkbox" class="form-check-input" name="_remember_me" id="_remember_me">
								<label class="form-check-label" for="_remember_me">
									Запомнить меня
								</label>
							</div>

							<div class="d-grid gap-2 mb-3">
								<button class="btn btn-primary btn-lg" type="submit">
									<i class="fas fa-sign-in-alt me-2"></i>Войти
								</button>
							</div>
						</form>

						<div class="text-center mt-4 pt-3 border-top">
							<p class="text-muted mb-3">Ещё нет аккаунта?</p>
							<a href="{{ path('app_register') }}" class="btn btn-outline-primary btn-lg w-100">
								<i class="fas fa-user-plus me-2"></i>Зарегистрироваться
							</a>
						</div>
					</div>

					<div class="card-footer bg-light text-center py-3">
						<small class="text-muted">
							<i class="fas fa-shield-alt me-1"></i>
							Ваши данные защищены
						</small>
					</div>
				</div>

				{# Дополнительные ссылки (опционально) #}
				<div class="text-center mt-3">
					<a href="#" class="text-decoration-none small">
						<i class="fas fa-question-circle me-1"></i>Забыли пароль?
					</a>
				</div>
			</div>
		</div>
	</div>

	{# Добавьте этот скрипт для валидации формы #}
	<script>
		// Валидация формы
document.addEventListener('DOMContentLoaded', function () {
'use strict';

// Получаем все формы с классом needs-validation
var forms = document.querySelectorAll('.needs-validation');

// Перебираем формы и добавляем обработчик
Array.prototype.slice.call(forms).forEach(function (form) {
form.addEventListener('submit', function (event) {
if (! form.checkValidity()) {
event.preventDefault();
event.stopPropagation();
}
form.classList.add('was-validated');
}, false);
});
});
	</script>

	<style>
		/* Дополнительные стили для формы входа */
		.card {
			border: none;
			border-radius: 15px;
		}

		.card-header {
			border-bottom: 1px solid rgba(0, 0, 0, .125);
			border-radius: 15px 15px 0 0 !important;
		}

		.form-control-lg {
			border-radius: 10px;
			padding: 0.75rem 1rem;
		}

		.btn-lg {
			border-radius: 10px;
			padding: 0.75rem 1.5rem;
		}

		/* Анимация для карточки */
		.card {
			transition: transform 0.3s ease, box-shadow 0.3s ease;
		}

		.card:hover {
			transform: translateY(-5px);
			box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
		}

		/* Стили для полей ввода при фокусе */
		.form-control:focus {
			border-color: #80bdff;
			box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, .25);
		}

		/* Адаптивность */
		@media(max-width: 768px) {
			.container {
				padding: 20px;
			}

			.card {
				margin-top: 2rem !important;
			}
		}
	</style>
{% endblock %}
